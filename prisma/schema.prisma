// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  projectMembers ProjectMember[]
  userCompanies  UserCompany[]

  @@map("users")
}

enum ProjectVisibility {
  PRIVATE // 1: プライベート（プロジェクトメンバーのみ）
  COMPANY_INTERNAL // 2: 社内公開（同じ会社の管理者・メンバーが閲覧・編集可能）
  PUBLIC // 3: 公開（今後実装）
}

model Project {
  id          String            @id @default(uuid())
  name        String
  description String?
  visibility  ProjectVisibility @default(PRIVATE)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  members          ProjectMember[]
  sheets           Sheet[]
  projectCompanies ProjectCompany[]

  @@map("projects")
}

model ProjectMember {
  id        String   @id @default(uuid())
  projectId String
  userId    String
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@map("project_members")
}

model Sheet {
  id          String   @id @default(uuid())
  projectId   String
  name        String
  description String?
  content     String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project  Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  versions SheetVersion[]
  markers  SheetMarker[]

  @@map("sheets")
}

model SheetVersion {
  id          String   @id @default(uuid())
  sheetId     String
  name        String
  description String?
  content     String?
  imageUrl    String?
  versionName String
  createdAt   DateTime @default(now())

  sheet   Sheet         @relation(fields: [sheetId], references: [id], onDelete: Cascade)
  markers SheetMarker[]

  @@map("sheet_versions")
}

model SheetMarker {
  id             String   @id @default(uuid())
  sheetId        String
  sheetVersionId String?
  type           String // 'number' | 'square'
  x              Float // 0-100のパーセンテージ
  y              Float // 0-100のパーセンテージ
  width          Float? // 四角タイプの場合のみ
  height         Float? // 四角タイプの場合のみ
  note           String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  sheet        Sheet         @relation(fields: [sheetId], references: [id], onDelete: Cascade)
  sheetVersion SheetVersion? @relation(fields: [sheetVersionId], references: [id], onDelete: Cascade)

  @@map("sheet_markers")
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}

model Company {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userCompanies    UserCompany[]
  projectCompanies ProjectCompany[]
  invitations      CompanyInvitation[]
  partnerships1    CompanyPartnership[] @relation("Company1")
  partnerships2    CompanyPartnership[] @relation("Company2")

  @@map("companies")
}

model UserCompany {
  id        String   @id @default(uuid())
  userId    String
  companyId String
  userType  Int      @default(4) // 1: ADMINISTRATOR, 2: MEMBER, 3: PARTNER, 4: CUSTOMER
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([userId, companyId])
  @@map("user_companies")
}

model ProjectCompany {
  id        String   @id @default(uuid())
  projectId String
  companyId String
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([projectId, companyId])
  @@map("project_companies")
}

model CompanyInvitation {
  id        String           @id @default(uuid())
  companyId String
  email     String
  token     String           @unique
  userType  Int              @default(4) // 1: ADMINISTRATOR, 2: MEMBER, 3: PARTNER, 4: CUSTOMER
  status    InvitationStatus @default(PENDING)
  invitedBy String // 招待したユーザーID
  expiresAt DateTime
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, email, status])
  @@map("company_invitations")
}

model CompanyPartnership {
  id         String   @id @default(uuid())
  companyId1 String
  companyId2 String
  createdAt  DateTime @default(now())

  company1 Company @relation("Company1", fields: [companyId1], references: [id], onDelete: Cascade)
  company2 Company @relation("Company2", fields: [companyId2], references: [id], onDelete: Cascade)

  @@unique([companyId1, companyId2])
  @@map("company_partnerships")
}
